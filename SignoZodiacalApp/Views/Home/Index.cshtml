@model Application.ModelView.ZodiacModelView;
@{
    ViewData["Title"] = "Home Page";
 
}

<form method="post" asp-controller="Home" asp-action="GetZodiacSign" class="container p-4 mt-5">
    <section class="row">
        <div class="form-group mx-auto text-center col-md-4">
            <h1 class="display-4"> Conoce tu <br /> <b>Signo Zodiacal</b> </h1>
            <div class="mx-auto w-100 mt-5">
                <input asp-for="day" type="number" min="1" max="31" class="form-control w-100 mt-3" placeholder="Día">
                <input asp-for="month" type="number" min="1" max="12" class="form-control w-100 mt-3" placeholder="Mes">
            </div>
            <button type="submit" class="btn btn-dark btn-block w-100 mt-3"> Verificar </button>
        </div>
    </section>
</form>